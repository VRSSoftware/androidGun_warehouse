<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ssinfomate.warehousemanagement.ui.general.GeneralFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:weightSum="1">
            <ImageView
                android:id="@+id/button_general_entry"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:scaleType="centerInside"
                android:src="@drawable/general_list"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="General Entry"
                android:textSize="16sp"
                />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/button_general_list"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_weight="0.6"
                android:layout_height="0dp"
                android:src="@drawable/general_list"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_height="0dp"
                android:text="General List"
                />

        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/container_general_entry"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <TextView
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:id="@+id/txt_stock_correction_frg_save_stock_correction"
                style="@style/TextViewComponent"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/text_adjustment_type"
                android:text="Scan Barcode"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
               android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/text_general_barcode"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    />

                <Button
                    android:id="@+id/button_general_ok"
                    android:layout_width="5dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.20"
                    android:background="@drawable/button_background"
                    android:text="ok"

                    />
            </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Product Name"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="2dp"
                    />

                <TextView
                    android:id="@+id/text_general_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_200"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:hint="Product Name"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="2dp"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="30dp"
                    android:text="System Quantity:-"
                    android:gravity="left|center"
                    android:layout_margin="2dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    />

                <TextView
                    android:id="@+id/text_general_system_quantity"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="30dp"
                    :textColor="@color/purple_200"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="30dp"
                    android:text="Unit:-"
                    android:gravity="left|center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/text_general_unit"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="30dp"
                    android:gravity="left|center"
                    android:textColor="@color/purple_200"
                    android:textSize="18sp"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="2dp"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:text="Remark 1"
                    android:textSize="16sp"
                    android:gravity="left|center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    />

                <EditText
                    android:id="@+id/text_general_remark_one"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent"
                    android:hint="Remark 1"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:textColor="@color/purple_200"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:background="@drawable/edit_text_background"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:minHeight="50dp"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:text="Remark 2"
                    android:textSize="16sp"
                    android:gravity="left|center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    />

                <EditText
                    android:id="@+id/text_general_remark_two"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent"
                    android:hint="Remark 2"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:layout_margin="2dp"
                    android:textColor="@color/purple_200"
                    android:padding="2dp"
                    android:background="@drawable/edit_text_background"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/button_general_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Submit"
                android:layout_gravity="center"
                android:background="@drawable/button_background"
                android:layout_margin="5dp"
                />


        </LinearLayout>
        <LinearLayout
                android:id="@+id/container_general_list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_general_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_general_list"
                    />

            </LinearLayout>

</LinearLayout>