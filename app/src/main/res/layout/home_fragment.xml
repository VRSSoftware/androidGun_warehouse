<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:background="#ffffff"
    tools:context="com.ssinfomate.warehousemanagement.ui.home.HomeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="130dp"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_height="130dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_home_fragment_stock_correction_img"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_stock_correction"
                    android:scaleType="centerInside"
                    android:layout_weight="0.7"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:text="Stock Correction"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="130dp"
           >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_height="130dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_home_fragment_stock_transfer_img"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_stock_transfer"
                    android:scaleType="centerInside"
                    android:layout_weight="0.7"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:text="  Stock Transfer"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="130dp"
           >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_height="130dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_home_fragment_check_stock_img"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_pick_held_stock_transfer"
                    android:scaleType="centerInside"
                    android:layout_weight="0.7"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:text="Check Stock"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="130dp"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_height="130dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_home_fragment_purchase_order_img"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_purchase_order"
                    android:scaleType="centerInside"
                    android:layout_weight="0.8"
                    android:layout_marginTop="5dp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:text="Purchase Order"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="130dp"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_height="130dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_home_fragment_grn_img"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_grn"
                    android:scaleType="centerInside"
                    android:layout_weight="0.8"
                    android:layout_marginTop="5dp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:text="GRN"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="130dp"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_height="130dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_home_fragment_print_price_tag_img"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_print_price_tag"
                    android:scaleType="centerInside"
                    android:layout_weight="0.8"
                    android:layout_marginTop="5dp"
                    android:layout_height="0dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:text="Print Price Tag"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_margin="4dp"
            android:layout_height="130dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_height="130dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_home_fragment_general_img"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_reduce_barcode"
                    android:scaleType="centerInside"
                    android:layout_weight="0.8"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:text="General"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="130dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_height="130dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_home_fragment_reduce_barcode_img"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_reduce_barcode"
                    android:scaleType="centerInside"
                    android:layout_weight="0.7"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:text="Reduce Barcode"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>