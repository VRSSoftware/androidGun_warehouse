<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ssinfomate.warehousemanagement.ui.stocktransfernotification.StockTransferNotification">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:gravity="right"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_stock_tranfer_notification_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_stock_tranfer_notification_accept"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_stock_tranfer_notification_submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        />
</androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_recycle_view_stock_transfer_notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/row_stock_transfer_notification_list"
            >

        </androidx.recyclerview.widget.RecyclerView>


    </androidx.appcompat.widget.LinearLayoutCompat>

