<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Scan Quantity:-"-->
<!--            android:layout_weight="0.44"-->
<!--            android:textSize="14sp"-->
<!--            android:textStyle="bold"/>-->

