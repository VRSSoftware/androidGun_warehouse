<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WarehouseManegment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.WarehouseManegment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WarehouseManegment.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WarehouseManegment.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextViewComponent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gery</item>
        <item name="android:gravity">left|center_vertical</item>

    </style>

    <style name="EditTextViewComponent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <!--item name="android:textStyle">bold</item-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--       Home Savers Style   -->
    <style name="HomeSaversTextViewCompact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#2F4F4F</item>
        <item name="android:layout_marginTop">0dp</item>



    </style>




</resources>